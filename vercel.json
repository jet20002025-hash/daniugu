{
  "version": 2,
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron?scan_type=noon",
      "schedule": "30 11 * * 1-5"
    },
    {
      "path": "/api/cron?scan_type=afternoon",
      "schedule": "0 15 * * 1-5"
    }
  ]
}
