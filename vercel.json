{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron?scan_type=noon",
      "schedule": "30 11 * * 1-5"
    },
    {
      "path": "/api/cron?scan_type=afternoon",
      "schedule": "0 15 * * 1-5"
    }
  ]
}
